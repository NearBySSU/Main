<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:context=".main.upload.UploadContentsActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_upload_title"
        android:layout_width="134dp"
        android:layout_height="36dp"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:text="게시물 업로드"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_cancel"
        android:layout_margin="20dp"
        android:scaleType="fitXY"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_upload_title"/>

<ImageView
    android:id="@+id/img_line1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/ic_line"
    android:layout_marginTop="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/recyclerView"/>

    <EditText
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:hint="텍스트 입력..."
        android:paddingStart="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:maxLines="7"
        android:background="@color/transparent"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_line1" />

    <ImageView
        android:id="@+id/img_line2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_line"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_line1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        android:text="날짜"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_line2"/>


    <Button
        android:id="@+id/pick_date_button"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/chip_rec"
        android:fontFamily="@font/poppins_bold"
        android:onClick="pickDate"
        android:text="선택"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date"
        app:layout_constraintStart_toEndOf="@+id/tv_date"
        app:layout_constraintTop_toBottomOf="@+id/img_line2" />

    <TextView
        android:id="@+id/show_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Selected date"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_date" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/show_date_textView"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기간 별로 보기"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chipGroupScroll"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_date_textView">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupDate"
                app:chipSpacingHorizontal="20dp"
                app:singleSelection="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:theme="@style/AppTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/show_date_textView">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/dateChip01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="10dp"
                    app:chipEndPadding="10dp"
                    app:chipStrokeColor="@color/secondColor"
                    app:chipStrokeWidth="2dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="전체"/>


                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/dateChip02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="10dp"
                    app:chipEndPadding="10dp"
                    app:chipStrokeColor="@color/secondColor"
                    app:chipStrokeWidth="2dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="6개월 이내"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/dateChip03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="10dp"
                    app:chipEndPadding="10dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="1년 이내"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/dateChip04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="10dp"
                    app:chipEndPadding="10dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="3년 이내"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/dateChip05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="10dp"
                    app:chipEndPadding="10dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="직접 설정"/>

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="10dp"
            android:text="태그"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chipGroupScroll2"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_date_textView">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTag"
                app:chipSpacingHorizontal="30dp"
                app:singleSelection="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:theme="@style/AppTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/show_date_textView">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/tagChip01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="20dp"
                    app:chipEndPadding="20dp"
                    app:chipStrokeColor="@color/secondColor"
                    app:chipStrokeWidth="2dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="맛집"/>


                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/tagChip02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="20dp"
                    app:chipEndPadding="20dp"
                    app:chipStrokeColor="@color/secondColor"
                    app:chipStrokeWidth="2dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="여행"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/tagChip03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="20dp"
                    app:chipEndPadding="20dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="일상"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/tagChip04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="20dp"
                    app:chipEndPadding="20dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="추억"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/tagChip05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="20dp"
                    app:chipEndPadding="20dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="태그 추가"/>

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="범위"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chipGroupScroll3"
            android:scrollbars="none"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_date_textView">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupArea"
                app:chipSpacingHorizontal="30dp"
                app:singleSelection="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:theme="@style/AppTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/show_date_textView">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/areaChip01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="20dp"
                    app:chipEndPadding="20dp"
                    app:chipStrokeColor="@color/secondColor"
                    app:chipStrokeWidth="2dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="가까이"/>


                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/areaChip02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="20dp"
                    app:chipEndPadding="20dp"
                    app:chipStrokeColor="@color/secondColor"
                    app:chipStrokeWidth="2dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="적당히"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/areaChip03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipStartPadding="20dp"
                    app:chipEndPadding="20dp"
                    app:chipBackgroundColor="@drawable/chip_background"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="멀리"/>

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/upload_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="uploadPost"
        android:text="업로드"
        android:background="@drawable/big_button"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>