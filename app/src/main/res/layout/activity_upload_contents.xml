<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".main.upload.UploadContentsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_upload_title"
            android:layout_width="134dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins_bold"
            android:text="게시물 업로드"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_upload_title" />

        <ImageView
            android:id="@+id/img_line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerView" />

        <EditText
            android:id="@+id/mainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="@font/poppins_light"
            android:hint="텍스트 입력..."
            android:inputType="textMultiLine"
            android:maxLines="7"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:scrollHorizontally="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_line1" />

        <ImageView
            android:id="@+id/img_line2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="220dp"
            android:src="@drawable/ic_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_line1" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="날짜"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_line2" />


        <Button
            android:id="@+id/pick_date_button"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/chip_rec"
            android:fontFamily="@font/poppins_bold"
            android:onClick="pickDate"
            android:text="선택"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date"
            app:layout_constraintStart_toEndOf="@+id/tv_date"
            app:layout_constraintTop_toBottomOf="@+id/img_line2" />

        <TextView
            android:id="@+id/show_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text=""
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_date" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/show_date_textView">


            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="태그"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <HorizontalScrollView
                android:id="@+id/chipGroupScroll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/show_date_textView">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:theme="@style/AppTheme"
                    app:chipSpacingHorizontal="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/show_date_textView"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/tagChip01"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="맛집"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:chipBackgroundColor="@drawable/chip_background"
                        app:chipEndPadding="20dp"
                        app:chipStartPadding="20dp"
                        app:chipStrokeColor="@color/secondColor" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/tagChip02"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여행"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:chipBackgroundColor="@drawable/chip_background"
                        app:chipEndPadding="20dp"
                        app:chipStartPadding="20dp"
                        app:chipStrokeColor="@color/secondColor" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/tagChip03"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일상"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:chipBackgroundColor="@drawable/chip_background"
                        app:chipEndPadding="20dp"
                        app:chipStartPadding="20dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/tagChip04"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="추억"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:chipBackgroundColor="@drawable/chip_background"
                        app:chipEndPadding="20dp"
                        app:chipStartPadding="20dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/et_add_text"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="태그 추가"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:chipBackgroundColor="@drawable/chip_background"
                        app:chipEndPadding="20dp"
                        app:chipStartPadding="20dp" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/upload_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/big_button"
            android:onClick="uploadPost"
            android:text="업로드"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>